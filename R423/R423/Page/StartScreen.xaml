<Window x:Class="R423.Page.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R423.Page"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Цифровая тропосферная станция Р-423" Height="600" Width="900" Closing="Window_Closing" Icon="/Resources/iconApp.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="65.5*"/>
            <RowDefinition Height="7.5*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Resources/top.png" />
        <Image Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Resources/startScreen.JPG" />
        <Button Grid.Row="2" Content="Старт" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" FontSize="18" Click="Button_Click" />
    </Grid>
</Window>
