<Page x:Class="R423.Page.ImageWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:R423.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Изображение">

    <Grid Name="ImgGrid" MouseRightButtonUp="ImgGrid_MouseRightButtonUp" MouseLeftButtonUp="ImgGrid_MouseLeftButtonUp" MouseWheel="ImgGrid_MouseWheel" MouseLeftButtonDown="ImgGrid_MouseLeftButtonDown" MouseMove="ImgGrid_MouseMove">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*" />
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RenderTransform>
            <ScaleTransform x:Name="ImgScale" />
        </Grid.RenderTransform>
        <Image Name="CurrentImage" Grid.Row="0" Grid.ColumnSpan="2" />
    </Grid>
</Page>
